<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yi.easycode.modules.user.mapper.MenuMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.yi.easycode.modules.user.entity.MenuEntity">
        <id column="id" property="id" />
        <result column="menu_parent_id" property="menuParentId" />
        <result column="menu_level" property="menuLevel" />
        <result column="menu_name" property="menuName" />
        <result column="menu_url" property="menuUrl" />
        <result column="menu_icon" property="menuIcon" />
        <result column="menu_sort" property="menuSort" />
        <result column="menu_describe" property="menuDescribe" />
        <result column="del_flag" property="delFlag" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
    </resultMap>

    <select id="getMenuList" resultType="com.yi.easycode.modules.user.entity.MenuEntity">
        SELECT * FROM t_menu where del_flag = 0
        <if test="menuName != '' and menName != null">
            and menu_name like #{menuName} + '%'
        </if>
        LIMIT #{pageNum},#{pageSize}
    </select>
    
    <select id="getMenuCodes" resultType="com.yi.easycode.modules.user.vo.SelectVO">
        select id as selectCode,menu_name as selectValue from t_menu
    </select>
    
    <select id="getMenusByRoleId" resultType="com.yi.easycode.modules.user.entity.MenuEntity">
        select
            m.*
        from
            t_menu m
                left join t_role_menu_bind rmb on m.id = rmb.menu_id
        where
            rmb.role_id in
            <foreach item="roleId" collection="roleIds" separator="," open="(" close=")" index="">
                       #{roleId, jdbcType=NUMERIC}
            </foreach>
          and m.del_flag = 0;
    </select>
</mapper>
